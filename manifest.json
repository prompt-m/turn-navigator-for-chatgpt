{
  "manifest_version": 3,
  "name": "Turn Navigator for ChatGPT",
  "version": "1.0.0",
  "version_name": "1.0.0 (2025-12-13 23:00 JST)",
  "description": "長いチャットのスクロール地獄から解放します - Escape the endless scrolling in long chats",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "inject_url_hook.js",
        "assets/*.cur",
        "assets/*.png"
      ],
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*"
      ]
    }
  ],
  "permissions": ["storage", "tabs"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "i18n.js",
        "shared.js",
        "logic.js",
        "ui.js",
        "events.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "sw.js",
    "type": "module"
  },
  "action": {
    "default_title": "ChatGPT Turn Navigator"
  }
}
