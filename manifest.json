{
  "manifest_version": 3,
  "name": "ChatGPT Turn Navigator",
  "version": "1.1.0",
  "version_name": "1.1.0 (2025-09-25 00:00 JST)",
  "description": "ChatGPTの画面にナビ、リスト、付箋、プレビュー機能を追加。ユーザーやアシスタントの発言をすばやく移動・表示できます。",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["assets/*.cur"],
    "matches": ["<all_urls>"]
  }],
  "permissions": ["storage"],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://*.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://*.openai.com/*"],
      "js": [
        "i18n.js",
        "shared.js",
        "logic.js",
        "ui.js",
        "events.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "ChatGPT Turn Navigator"
  }
}
